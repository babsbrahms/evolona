	<!-- Header -->

	<header class="header">
			<div class="header_inner d-flex flex-row align-items-center justify-content-start">
				<div class="logo"><a href="/">Evolona <%=page || ""%></a></div>
				<div class="header_content ml-auto">
					<div class="search header_search">
						<form action="#">
							<input type="search" class="search_input" required="required">
							<button type="submit" id="search_button" class="search_button"><img src="images/magnifying-glass.svg" alt=""></button>
						</form>
					</div>

				
					
					<div id="search_div" class="search">
						<form action="#">
							<input type="search" id="search" class="search_input menu_mm" required="required">
							<button type="submit" id="search_button_menu" class="search_button menu_mm"><img class="menu_mm" src="images/magnifying-glass.svg" alt=""></button>
						</form>
						
					</div>
					
				

					<div style="padding-right: 10px; padding-left: 10px; align-self: flex-end;" class="shopping">
						<!-- Cart -->
						<a href="/cart">
							<div class="cart">
								<img src="images/shopping-bag.svg" alt="">
								<div class="cart_num_container">
									<div class="cart_num_inner">
											<%if(cart) {%>
												<div class="cart_num"><%=cart?  cart.total_qty : 0 %></div>
											<%}%>
										
									</div>
								</div>
							</div>
						</a>

						<ul>
							<li style="padding: 3px;">
								<a href="/account" aria-label="Next">
									<i style="color: #937c6f; font-size: 24px;" class="fa fa-user"></i>
								</a>
							</li>

							<%if(auth){%>			
								<li style="padding: 3px;">
									<a href="/logout" aria-label="Next">
										<i style="color: #937c6f; font-size: 24px;" class="fa fa-sign-out"></i>
									</a>
								</li>
							<%} else {%> 
								<li style="padding: 3px;">
									<a href="/login" aria-label="Next">
										<i style="color: #937c6f; font-size: 24px;" class="fa fa-sign-in"></i>
									</a>
								</li>
							<%}%>
							</ul>
					</div>
				</div>
	
				<!-- <div class="burger_container d-flex flex-column align-items-center justify-content-around menu_mm"><div></div><div></div><div></div></div> -->
			</div>
			<ul id="search_result" class="list-group list-group-flush col-6 col-sm-8 offset-6 offset-sm-2">

			</ul>
		</header>
		
