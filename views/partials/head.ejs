		<script>
			var search = document.getElementById('search')
			var search_result = document.getElementById('search_result')
			var btn = document.getElementById('search_button_menu')
			var search_div = document.getElementById('search_div')
			console.log(search_div.style.display);
			

			search_div.style.display = 'none'
			if (window.location.pathname === '/') {
				console.log(window.location.href);
				
				search_div.style.display = ''
			}
			// btn click
			btn.addEventListener('click', function(e) {
				e.preventDefault()
				var word = search.value;

			
				if (word.length > 0) {
					search_result.innerHTML = '<li class="list-group-item list-group-item-action text-center"> <span style="size:20 " class="fa fa-spinner fa-spin"></span></li>'
					fetch(`/product/search?q=${word}`)
					.then((res) => {
						return res.json()	
					})
					.then(data => {
						console.log('ser', data);
						var list = ''
						if(data.result.length === 0 ) {
							search_result.innerHTML = '<p class="list-group-item list-group-item-action">product not found</p>'
						} else {
							data.result.forEach(result => {
							// var li = document.createElement('li')
							// li.className = "list-group-item list-group-item-action";
							// var a = document.createElement('a')
							// li.appendChild(a)
							// a.setAttribute('href', `/product?id:${result.id}`)
							// a.innerHTML = result.name;
							// search_result.appendChild(li)
							list += `<li class="list-group-item list-group-item-action"> <a href="/product?id=${result._id}">${result.name}</a></li>`
						});
						search_result.innerHTML = list
						}

							
					})
					.catch((err) => {
						console.log(err);
						
						search_result.innerHTML = '<p class="list-group-item list-group-item-action text-danger">product not found</p>'
					})
				}
				
			})
		
			// btt press
			search.addEventListener('keyup', function(e){				
				if(search.value.length === 0) {
				 search_result.innerHTML = ''
				}
			})

		
		</script>